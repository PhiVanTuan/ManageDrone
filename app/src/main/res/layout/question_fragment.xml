<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="#e2e0e0"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#e2e0e0"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_search"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="Nhập id Drone"
                android:padding="8dp"
                android:textSize="14sp" />


        </RelativeLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl"
            android:background="@color/divider" />
        <ExpandableListView
            android:background="@android:color/white"
            android:dividerHeight="0dp"
            android:groupIndicator="@null"
            android:layout_marginBottom="10dp"
            android:id="@+id/rcvList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"/>
        <RelativeLayout
            android:background="@drawable/bg_search"
            android:layout_below="@+id/rcvList"
            android:id="@+id/viewFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/imgFeedback"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_feedback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgFeedback"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="Bạn gặp phải vấn đề khác ? Liên hệ với chúng tôi"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
